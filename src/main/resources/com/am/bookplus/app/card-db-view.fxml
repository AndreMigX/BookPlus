<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>

<VBox alignment="TOP_RIGHT" maxHeight="245.0" prefHeight="188.0" prefWidth="500.0" spacing="20.0" styleClass="card" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.am.bookplus.app.controller.settings.DBCard">
   <VBox.margin>
      <Insets />
   </VBox.margin>
   <children>
      <Label graphicTextGap="10.0" prefHeight="25.0" prefWidth="500.0" styleClass="header" text="Database" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </Label>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="470.0" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#btn_create_click" prefHeight="39.0" prefWidth="120.0" text="Create DB">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font name="Calibri" size="14.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#btn_load_click" prefHeight="39.0" prefWidth="120.0" text="Load Test Data">
                           <font>
                              <Font name="Calibri" size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                  </HBox>
                  <Label fx:id="lbl_log" alignment="BOTTOM_LEFT" prefWidth="470.0" textFill="#d75a5a">
                     <font>
                        <Font name="Calibri" size="14.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <styleClass>
                        <String fx:value="log" />
                        <String fx:value="red" />
                     </styleClass>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="cover_wait" alignment="CENTER" prefWidth="100.0" styleClass="card" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ProgressIndicator />
                  <Label text="Working..." textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Label>
               </children></VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@style/main.css" />
      <URL value="@style/fab.css" />
      <URL value="@style/card-red.css" />
   </stylesheets>
</VBox>
