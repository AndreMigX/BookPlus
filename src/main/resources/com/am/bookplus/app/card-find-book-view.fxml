<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>

<VBox alignment="TOP_RIGHT" maxHeight="245.0" prefHeight="245.0" prefWidth="500.0" spacing="20.0" styleClass="card" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.am.bookplus.app.controller.book.FindBookCard">
   <VBox.margin>
      <Insets />
   </VBox.margin>
   <children>
      <Label graphicTextGap="10.0" prefHeight="25.0" prefWidth="500.0" styleClass="header" text="Find Book by ISBN" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </Label>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TextField fx:id="in_isbn" onKeyTyped="#in_isbn_change" prefHeight="25.0" promptText="ISBN">
                     <font>
                        <Font name="Calibri" size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="in_title" editable="false" prefHeight="25.0" promptText="Title" styleClass="not-editable">
                     <font>
                        <Font name="Calibri" size="18.0" />
                     </font>
                  </TextField>
                  <HBox prefWidth="200.0" spacing="20.0">
                     <children>
                        <TextField fx:id="in_author" editable="false" prefHeight="25.0" promptText="Author" styleClass="not-editable" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Calibri" size="18.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="in_quantity" editable="false" prefHeight="25.0" promptText="Quantity" styleClass="not-editable">
                           <font>
                              <Font name="Calibri" size="18.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="lbl_log" prefHeight="17.0" prefWidth="500.0" textFill="#d75a5a" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Calibri" size="14.0" />
                           </font>
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                           <styleClass>
                              <String fx:value="log" />
                              <String fx:value="red" />
                           </styleClass>
                        </Label>
                        <Button mnemonicParsing="false" onMouseClicked="#btn_find_click" prefHeight="40.0" prefWidth="253.0">
                           <styleClass>
                              <String fx:value="fab" />
                              <String fx:value="search" />
                           </styleClass>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="cover_wait" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="card" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ProgressIndicator />
                  <Label text="Working..." textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Label>
               </children></VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@style/main.css" />
      <URL value="@style/fab.css" />
      <URL value="@style/card-purple.css" />
   </stylesheets>
</VBox>
